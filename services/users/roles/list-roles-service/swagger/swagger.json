{
  "openapi": "3.0.0",
  "info": {
    "title": "List Roles Service",
    "version": "1.0.0",
    "description": "Service to list all user roles"
  },
  "paths": {
    "/list-roles": {
      "get": {
        "summary": "List all roles",
        "responses": {
          "200": {
            "description": "List of roles",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "userId": { "type": "string" },
                      "role": { "type": "string" },
                      "assignedAt": { "type": "string", "format": "date-time" }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
