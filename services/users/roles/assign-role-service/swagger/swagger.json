{
  "openapi": "3.0.0",
  "info": {
    "title": "Assign Role Service",
    "version": "1.0.0",
    "description": "Service to assign roles to users"
  },
  "paths": {
    "/assign-role": {
      "post": {
        "summary": "Assign a role to a user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": { "type": "string" },
                  "role": { "type": "string" }
                },
                "required": ["userId", "role"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role assigned successfully"
          },
          "400": {
            "description": "Missing required fields"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  }
}
